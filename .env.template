# API Gateway Environment Configuration Template
# Copy this file to .env and update the values for your environment
# IMPORTANT: Never commit .env files to version control!

# Server Configuration
SERVER_PORT=8080

# JWT Configuration - CHANGE THESE IN PRODUCTION!
# Use a strong, randomly generated secret (minimum 256 bits for HMAC)
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_SECRET_KEY_AT_LEAST_256_BITS_LONG
JWT_EXPIRATION=86400000

# Service URLs - Update these to match your deployment environment
AUTH_SERVICE_URL=http://host.docker.internal:8081
USER_SERVICE_URL=http://host.docker.internal:8082
PROJECT_SERVICE_URL=http://localhost:8083
TASK_SERVICE_URL=http://localhost:8084
NOTIFICATION_SERVICE_URL=http://localhost:8085
HEALTH_SERVICE_URL=http://host.docker.internal:8080

# Config Server (optional)
CONFIG_SERVER_URL=http://localhost:8888

# CORS Configuration
CORS_ALLOWED_ORIGINS=*
CORS_MAX_AGE=3600

# Logging Configuration
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_GATEWAY=DEBUG
LOG_LEVEL_SECURITY=DEBUG

# Actuator Configuration
MANAGEMENT_ENDPOINTS_INCLUDE=health,info
MANAGEMENT_HEALTH_SHOW_DETAILS=always

# Application Name
APPLICATION_NAME=api-gateway
