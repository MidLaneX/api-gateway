# API Gateway Environment Configuration
# Copy this file to .env and update the values for your environment

# Server Configuration
SERVER_PORT=8080
APPLICATION_NAME=api-gateway

# JWT Configuration
# IMPORTANT: Generate a secure JWT secret for production (minimum 32 characters)
JWT_SECRET=myVerySecureJwtSecretKeyThatIsAtLeast32CharactersLongForHS256Algorithm
JWT_EXPIRATION=86400000

# Service URLs
AUTH_SERVICE_URL=http://host.docker.internal:8081
USER_SERVICE_URL=http://host.docker.internal:8082
PROJECT_SERVICE_URL=http://localhost:8083
TASK_SERVICE_URL=http://localhost:8084
NOTIFICATION_SERVICE_URL=http://localhost:8085
HEALTH_SERVICE_URL=http://host.docker.internal:8080

# Config Server
CONFIG_SERVER_URL=http://localhost:8888

# CORS Configuration
CORS_ALLOWED_ORIGINS=*
CORS_MAX_AGE=3600

# Logging Configuration
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_GATEWAY=DEBUG
LOG_LEVEL_SECURITY=DEBUG

# Management Endpoints
MANAGEMENT_ENDPOINTS_INCLUDE=health,info
MANAGEMENT_HEALTH_SHOW_DETAILS=always
